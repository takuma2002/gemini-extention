{
  "manifest_version": 3,
  "default_locale": "ja",
  "name": "__MSG_extensionName__",
  "version": "1.0",
  "description": "__MSG_extensionDescription__",
  "permissions": [
    "storage",
    "activeTab",
    "scripting"
  ],
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self';"
  },
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html"
  },
  "host_permissions": [
    "https://openrouter.ai/"
  ],
  "options_ui": {
    "page": "options.html",
    "open_in_tab": true
  }
}
